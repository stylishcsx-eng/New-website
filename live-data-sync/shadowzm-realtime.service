[Unit]
Description=ShadowZM Real-Time Data Sync Service
After=network.target mongod.service

[Service]
Type=simple
User=root
WorkingDirectory=/root
ExecStart=/usr/bin/python3 /root/realtime_sync.py
Restart=always
RestartSec=10

StandardOutput=append:/var/log/shadowzm-sync.log
StandardError=append:/var/log/shadowzm-sync.log

[Install]
WantedBy=multi-user.target
